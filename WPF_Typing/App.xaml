<Application
    StartupUri="MainWindow.xaml"
    x:Class="WPF_Typing.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="clr-namespace:WPF_Typing"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  引用对话框样式资源字典  -->
                <ResourceDictionary Source="DialogStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  App-wide font families using embedded font resources (placed under Assets/Fonts and marked as Resource in csproj)  -->
            <!--  Replace family names after verifying internal family names if needed  -->
            <FontFamily x:Key="AppFontFamily">pack://application:,,,/WPF_Typing;component/Assets/Fonts/#Google Sans Code, Consolas, HarmonyOS Sans SC, 'Microsoft YaHei'</FontFamily>
            <FontFamily x:Key="MenuFontFamily">pack://application:,,,/WPF_Typing;component/Assets/Fonts/#Google Sans Code, Consolas, HarmonyOS Sans SC, 'Microsoft YaHei'</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>