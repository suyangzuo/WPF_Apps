    <Window
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{DynamicResource AppFontFamily}"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Title="练习分析"
        MaxWidth="1200"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
    mc:Ignorable="d"
    x:Class="WPF_Typing.AnalysisDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <!--  样式已移至DialogStyles.xaml中全局定义  -->
    </Window.Resources>

    <Border
        Background="#1E1E1E"
        BorderBrush="#444"
        BorderThickness="1"
        CornerRadius="8"
        Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  标题栏  -->
            <Border
                Background="#303030"
                CornerRadius="8,8,0,0"
                Grid.Row="0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Emoji图标  -->
                    <TextBlock
                        FontFamily="Segoe UI Emoji, Noto Color Emoji, Apple Color Emoji"
                        FontSize="16"
                        Foreground="ForestGreen"
                        Grid.Column="0"
                        Margin="0,0,8,0"
                        Text="📊"
                        VerticalAlignment="Center" />

                    <TextBlock
                        FontFamily="{DynamicResource AppFontFamily}"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#EEE"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Text="测试结果统计"
                        VerticalAlignment="Center" />

                    <Button
                        Click="CloseButton_Click"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Style="{StaticResource DialogCloseButtonStyle}"
                        ToolTip="Close"
                        VerticalAlignment="Center"
                        x:Name="CloseButton" />
                </Grid>
            </Border>

            <!--  第一部分：统计信息  -->
            <Border Grid.Row="1" Padding="20,15">
                <TextBlock
                    FontFamily="{DynamicResource AppFontFamily}"
                    FontSize="14"
                    LineHeight="24"
                    TextWrapping="NoWrap"
                    x:Name="StatisticsText" />
            </Border>

            <!--  第二部分：错误统计图表（隐藏）  -->
            <Border Grid.Row="2" Padding="20,10" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock
                        FontFamily="{DynamicResource AppFontFamily}"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#DDD"
                        Margin="0,0,0,10"
                        Text="错误统计"
                        x:Name="ErrorChartLabel" />
                    <Border
                        Background="#2D2D2D"
                        BorderBrush="#555"
                        BorderThickness="1"
                        CornerRadius="4"
                        Height="300"
                        Padding="10">
                        <ContentPresenter x:Name="ErrorChartHost" />
                    </Border>
                </StackPanel>
            </Border>

            <!--  第三部分：速度统计图表（隐藏）  -->
            <Border Grid.Row="3" Padding="20,10" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock
                        FontFamily="{DynamicResource AppFontFamily}"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#DDD"
                        Margin="0,0,0,10"
                        Text="速度统计"
                        x:Name="SpeedChartLabel" />
                    <Border
                        Background="#2D2D2D"
                        BorderBrush="#555"
                        BorderThickness="1"
                        CornerRadius="4"
                        Height="300"
                        Padding="10">
                        <ContentPresenter x:Name="SpeedChartHost" />
                    </Border>
                </StackPanel>
            </Border>

            <!--  按钮区域  -->
            <Border
                Background="#303030"
                CornerRadius="0,0,8,8"
                Grid.Row="4"
                Padding="10,5">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Click="OKButton_Click"
                        Content="确定"
                        Height="30"
                        IsDefault="True"
                        Style="{StaticResource DialogOkButtonStyle}"
                        Width="80"
                        x:Name="OKButton" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
