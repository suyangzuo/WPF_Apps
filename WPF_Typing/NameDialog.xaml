<?xml version="1.0" encoding="utf-8" ?>
<Window
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="{DynamicResource AppFontFamily}"
    SizeToContent="Height"
    Title="NameDialog"
    Width="420"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    x:Class="WPF_Typing.NameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <!--  样式已移至DialogStyles.xaml中全局定义  -->
    </Window.Resources>

    <Border
        Background="#1E1E1E"
        BorderBrush="#444"
        BorderThickness="1"
        CornerRadius="8"
        Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <!--  Make the input row auto-sized so the TextBox can use its MinHeight and not get compressed  -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                Background="#303030"
                CornerRadius="8,8,0,0"
                Grid.Row="0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Height="20"
                        Margin="0,0,8,0"
                        SnapsToDevicePixels="True"
                        Source="pack://siteoforigin:,,,/Assets/Images/PNG/十指禅.png"
                        Stretch="Uniform"
                        VerticalAlignment="Center"
                        Width="20" />

                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#EEE"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Text="设置姓名"
                        VerticalAlignment="Center"
                        x:Name="TitleText" />

                    <Button
                        Click="CloseButton_Click"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Style="{StaticResource DialogCloseButtonStyle}"
                        ToolTip="Close"
                        VerticalAlignment="Center"
                        x:Name="CloseTopButton" />
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="12,10,12,0">
                <TextBlock
                    FontSize="14"
                    Foreground="#AAA"
                    Text="测试者姓名（留空则默认为：江湖人士）："
                    TextWrapping="Wrap" />
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="12,6,12,0">
                <TextBox
                    FontSize="14"
                    Style="{StaticResource DialogTextBoxStyle}"
                    x:Name="NameTextBox" />
            </StackPanel>

            <StackPanel
                Grid.Row="3"
                HorizontalAlignment="Right"
                Margin="12"
                Orientation="Horizontal">
                <Button
                    Click="CancelButton_Click"
                    Content="取消"
                    FontSize="14"
                    Height="30"
                    IsCancel="True"
                    Margin="0,0,6,0"
                    Style="{StaticResource DialogOkButtonStyle}"
                    Width="80" />
                <Button
                    Click="OkButton_Click"
                    Content="确定"
                    FontSize="14"
                    Height="30"
                    IsDefault="True"
                    Style="{StaticResource DialogOkButtonStyle}"
                    Width="80"
                    x:Name="OkButton" />
            </StackPanel>
        </Grid>
    </Border>
</Window>