<Window
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="{DynamicResource AppFontFamily}"
    ResizeMode="NoResize"
    SizeToContent="Height"
    Title="使用说明"
    Width="450"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d"
    x:Class="WPF_Typing.HelpDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <!--  样式已移至DialogStyles.xaml中全局定义  -->
    </Window.Resources>

    <Border
        Background="#1E1E1E"
        BorderBrush="#444"
        BorderThickness="1"
        CornerRadius="8"
        Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  标题栏  -->
            <Border
                Background="#303030"
                CornerRadius="8,8,0,0"
                Grid.Row="0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Emoji图标  -->
                    <TextBlock
                        FontFamily="Segoe UI Emoji, Noto Color Emoji, Apple Color Emoji"
                        FontSize="16"
                        Foreground="Gold"
                        Grid.Column="0"
                        Margin="0,0,8,0"
                        Text="❓"
                        VerticalAlignment="Center" />

                    <TextBlock
                        FontFamily="{DynamicResource AppFontFamily}"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#EEE"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Text="使用说明"
                        VerticalAlignment="Center" />

                    <Button
                        Click="CloseButton_Click"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Style="{StaticResource DialogCloseButtonStyle}"
                        ToolTip="Close"
                        VerticalAlignment="Center"
                        x:Name="CloseButton" />
                </Grid>
            </Border>

            <!--  内容区域  -->
            <Border Grid.Row="1" Padding="20">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <TextBlock
                        FontFamily="{DynamicResource AppFontFamily}"
                        FontSize="14"
                        Foreground="#DDD"
                        TextWrapping="Wrap"
                        x:Name="HelpText">
                        <Run
                            FontWeight="Bold"
                            Foreground="DarkGray"
                            Text="使用说明:" />
                        <LineBreak />
                        <LineBreak />
                        <Run Text="1. 从'文本选择'菜单中选择练习文本" />
                        <LineBreak />
                        <Run Text="2. 绿色播放按钮功能：再次载入选中的文章" />
                        <LineBreak />
                        <Run Text="3. 输入第一个字符时，测试自动开始" />
                        <LineBreak />
                        <Run Text="4. 点击红色停止按钮，可结束测试" />
                    </TextBlock>
                </ScrollViewer>
            </Border>

            <!--  按钮区域  -->
            <Border
                Background="#303030"
                CornerRadius="0,0,8,8"
                Grid.Row="2"
                Padding="10,5">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Click="OKButton_Click"
                        Content="确定"
                        Height="30"
                        IsDefault="True"
                        Style="{StaticResource DialogOkButtonStyle}"
                        Width="80"
                        x:Name="OKButton" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>