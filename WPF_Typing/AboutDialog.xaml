<Window
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="{DynamicResource AppFontFamily}"
    ResizeMode="NoResize"
    SizeToContent="Height"
    Title="关于"
    Width="400"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d"
    x:Class="WPF_Typing.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <!--  样式已移至DialogStyles.xaml中全局定义  -->
    </Window.Resources>

    <Border
        Background="#1E1E1E"
        BorderBrush="#444"
        BorderThickness="1"
        CornerRadius="8"
        Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  标题栏  -->
            <Border
                Background="#303030"
                CornerRadius="8,8,0,0"
                Grid.Row="0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Emoji图标  -->
                    <TextBlock
                        FontFamily="Segoe UI Emoji, Noto Color Emoji, Apple Color Emoji"
                        FontSize="16"
                        Foreground="LightBlue"
                        Grid.Column="0"
                        Margin="0,0,8,0"
                        Text="ℹ️"
                        VerticalAlignment="Center" />

                    <TextBlock
                        FontFamily="{DynamicResource AppFontFamily}"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#EEE"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Text="关于"
                        VerticalAlignment="Center" />

                    <Button
                        Click="CloseButton_Click"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Style="{StaticResource DialogCloseButtonStyle}"
                        ToolTip="Close"
                        VerticalAlignment="Center"
                        x:Name="CloseButton" />
                </Grid>
            </Border>

            <!--  内容区域  -->
            <Border Grid.Row="1" Padding="20">
                <StackPanel>
                    <TextBlock
                        FontFamily="{DynamicResource AppFontFamily}"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#FFFFFF"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10"
                        Text="十指禅" />
                    <TextBlock
                        FontFamily="{DynamicResource AppFontFamily}"
                        FontSize="14"
                        Foreground="#CCC"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15"
                        Text="版本: 1.0.0" />
                    <TextBlock
                        FontFamily="{DynamicResource AppFontFamily}"
                        FontSize="14"
                        Foreground="#DDD"
                        HorizontalAlignment="Center"
                        Text="一个基于 WPF 的打字练习应用程序，"
                        TextWrapping="Wrap" />
                    <TextBlock
                        FontFamily="{DynamicResource AppFontFamily}"
                        FontSize="14"
                        Foreground="#DDD"
                        HorizontalAlignment="Center"
                        Text="支持多种文本练习和统计分析功能。"
                        TextWrapping="Wrap" />
                    <TextBlock
                        FontFamily="{DynamicResource AppFontFamily}"
                        FontSize="12"
                        Foreground="#AAA"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0"
                        Text="© 2023 WPF 打字练习" />
                </StackPanel>
            </Border>

            <!--  按钮区域  -->
            <Border
                Background="#303030"
                CornerRadius="0,0,8,8"
                Grid.Row="2"
                Padding="10,5">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Click="OKButton_Click"
                        Content="确定"
                        Height="30"
                        IsDefault="True"
                        Style="{StaticResource DialogOkButtonStyle}"
                        Width="80"
                        x:Name="OkButton" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>