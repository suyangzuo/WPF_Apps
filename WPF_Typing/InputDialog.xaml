<?xml version="1.0" encoding="utf-8" ?>
<Window
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="{DynamicResource AppFontFamily}"
    Height="200"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Title="InputDialog"
    Width="400"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    x:Class="WPF_Typing.InputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <!--  样式已移至DialogStyles.xaml中全局定义  -->
    </Window.Resources>

    <Border
        Background="#1E1E1E"
        BorderBrush="#444"
        BorderThickness="1"
        CornerRadius="8"
        Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                Background="#303030"
                CornerRadius="8,8,0,0"
                Grid.Row="0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Left icon (loaded from app folder Assets)  -->
                    <Image
                        Grid.Column="0"
                        Height="20"
                        Margin="0,0,8,0"
                        SnapsToDevicePixels="True"
                        Source="pack://siteoforigin:,,,/Assets/Images/PNG/十指禅.png"
                        Stretch="Uniform"
                        VerticalAlignment="Center"
                        Width="20" />

                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#EEE"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Text="输入"
                        VerticalAlignment="Center"
                        x:Name="TitleText" />

                    <Button
                        Click="CloseButton_Click"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Style="{StaticResource DialogCloseButtonStyle}"
                        ToolTip="Close"
                        VerticalAlignment="Center"
                        x:Name="CloseTopButton" />
                </Grid>
            </Border>

            <ScrollViewer
                Grid.Row="1"
                Margin="12"
                VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock
                        FontSize="14"
                        Foreground="#AAA"
                        Margin="0,0,0,8"
                        Text="请输入:"
                        TextWrapping="Wrap"
                        x:Name="PromptTextBlock" />
                    <TextBox
                        FontSize="14"
                        Style="{StaticResource DialogTextBoxStyle}"
                        TextWrapping="Wrap"
                        VerticalAlignment="Center"
                        x:Name="InputTextBox" />
                </StackPanel>
            </ScrollViewer>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Margin="12"
                Orientation="Horizontal">
                <Button
                    Click="OKButton_Click"
                    Content="确定"
                    Height="30"
                    Margin="6,0,0,0"
                    Style="{StaticResource DialogOkButtonStyle}"
                    Width="80"
                    x:Name="OKButton" />
                <Button
                    Click="CancelButton_Click"
                    Content="取消"
                    Height="30"
                    Margin="6,0,0,0"
                    Style="{StaticResource DialogOkButtonStyle}"
                    Width="80"
                    x:Name="CancelButton" />
            </StackPanel>
        </Grid>
    </Border>
</Window>